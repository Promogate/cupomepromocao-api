generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Store {
  id                       Int     @id @default(autoincrement())
  name                     String  @unique
  thumbnail                String
  thumbnail_background     String
  about                    String
  has_cashback             Boolean @default(false)
  provider                 String?
  provider_id              String  @unique
  cashback_amount          String?
  cashback_destination_url String?
  out_intent_offer         String?

  offers Offer[]

  @@map("stores")
}

model Offer {
  id                 Int      @id @default(autoincrement())
  type               String
  title              String
  usage              Int
  destination_link   String
  expiration_date    DateTime
  offer_image        String?
  promo_code         String?
  offer_main_message String?
  campaign           String?
  cep_campaign       String[]
  terms              String?
  provider_offer_id  String?
  is_sponsored       Boolean  @default(false)
  is_cashback        Boolean  @default(false)
  is_special         Boolean  @default(false)
  is_exclusive       Boolean  @default(false)
  cashback_amount    Int?

  store       Store  @relation(fields: [provider_id], references: [provider_id])
  provider_id String

  @@map("offers")
}
